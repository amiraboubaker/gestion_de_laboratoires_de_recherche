{% extends 'base.html.twig' %}

{% block body %}
    <h1>{{ publication.title }}</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Titre</th>
                <td>{{ publication.title }}</td>
            </tr>
            <tr>
                <th>Auteurs</th>
                <td>{{ publication.authors }}</td>
            </tr>
            <tr>
                <th>Date de publication</th>
                <td>{{ publication.publicationDate }}</td>
            </tr>
            <tr>
                <th>Revue</th>
                <td>{{ publication.journal }}</td>
            </tr>
            <tr>
                <th>Résumé</th>
                <td>{{ publication.summary }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('publication_edit', {'id': publication.id}) }}" class="btn btn-primary">Modifier</a>
    <a href="{{ path('publication_delete', {'id': publication.id}) }}" class="btn btn-danger">Supprimer</a>
{% endblock %}
