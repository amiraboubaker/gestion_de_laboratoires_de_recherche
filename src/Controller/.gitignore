<?php

namespace App\Controller;

use Symfony\Bundle\FrameworkBundle\Controller\AbstractController;
use Symfony\Component\HttpFoundation\Request;
use Symfony\Component\Routing\Annotation\Route;
use App\Entity\Equipment;
use App\Form\EquipmentType;

/**
 * @Route("/equipment")
 */
class EquipmentController extends AbstractController
{
    /**
     * @Route("/", name="equipment_index", methods={"GET"})
     */
    public function index(Request $request)
    {
        $equipments = $this->getDoctrine()->getRepository(Equipment::class)->findAll();

        return $this->render('equipment/index.html.twig', [
            'equipments' => $equipments,
        ]);
    }

    /**
     * @Route("/new", name="equipment_new", methods={"GET", "POST"})
     */
    public function new(Request $request)
    {
        $equipment = new Equipment();
        $form = $this->createForm(EquipmentType::class, $equipment);
        $form->handleRequest($request);

        if ($form->isSubmitted() && $form->isValid()) {
            $entityManager = $this->getDoctrine()->getManager();
            $entityManager->persist($equipment);
            $entityManager->flush();

            return $this->redirectToRoute('equipment_index');
        }

        return $this->render('equipment/new.html.twig', [
            'equipment' => $equipment,
            'form' => $form->createView(),
        ]);
    }

    /**
     * @Route("/{id}", name="equipment_show", methods={"GET"})
     */
    public function show(Equipment $equipment)
    {
        return $this->render('equipment/show.html.twig', [
            'equipment' => $equipment,
        ]);
    }

    /**
     * @Route("/{id}/edit", name="equipment_edit", methods={"GET", "POST"})
     */
    public function edit(Request $request, Equipment $equipment)
    {
        $form = $this->createForm(EquipmentType::class, $equipment);
        $form->handleRequest($request);

        if ($form->isSubmitted() && $form->isValid()) {
            $entityManager = $this->getDoctrine()->getManager();
            $entityManager->persist($equipment);
            $entityManager->flush();

            return $this->redirectToRoute('equipment_index');
        }

        return $this->render('equipment/edit.html.twig', [
            'equipment' => $equipment,
            'form' => $form->createView(),
        ]);
    }

    /**
     * @Route("/{id}/delete", name="equipment_delete", methods={"GET"})
     */
    public function delete(Request $request, Equipment $equipment)
    {
        $entityManager = $this->getDoctrine()->getManager();
        $entityManager->remove($equipment);
        $entityManager->flush();

        $this->addFlash('success', 'L\'équipement a été supprimé avec succès.');

        return $this->redirectToRoute('equipment_index');
    }

    /**
     * @Route("/{id}/delete_confirm", name="equipment_delete_confirm", methods={"GET"})
     */
    public function deleteConfirm(Request $request, Equipment $equipment)
    {
        return $this->render('equipment/delete.html.twig', [
            'equipment' => $equipment,
        ]);
}